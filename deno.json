{
  "imports": {
    "@nozbe/microfuzz": "npm:@nozbe/microfuzz@^1.0.0",
    "@simpesys/core": "jsr:@simpesys/core@^0.4.1",
    "hono": "jsr:@hono/hono@^4.10.7"
  },
  "tasks": {
    "start": "deno run -N -R -E -W app/main.ts",
    "dev": "deno run -N -R -E -W --watch=app,docs app/main.ts",
    "commit": "./tools/commit.sh",
    "img": "./tools/img.sh",
    "build:client": "deno bundle --minify -o assets/index.js app/client/index.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx",
    "lib": [
      "deno.window",
      "dom",
      "dom.iterable"
    ]
  },
  "unstable": [
    "temporal"
  ]
}
